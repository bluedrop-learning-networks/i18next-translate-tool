{
  "name": "translation-tool",
  "version": "1.0.0",
  "description": "CLI tool for translating i18next locale files using AI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "i18next-translate": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/bin/cli.js",
    "test": "tsx --test 'src/**/*.spec.ts'",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check --apply ."
  },
  "keywords": [
    "i18next",
    "translation",
    "cli",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.5.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "cmd-ts": "^0.13.0",
    "glob": "^11.0.0",
    "i18next": "^23.15.1",
    "node": "^22.9.0",
    "openai": "^4.63.0"
  },
  "packageManager": "pnpm@8.6.0"
}
